exports.createProduct = (req, res, next) => {
  const product = new Product(
    {
      title: req.body.title,
      description: req.body.desc,
      imageUrl: "non def",
      userId: "req.body.user",
      price: 55,
    }
  )

  product.save()
  .then(
    () => {
      res.end("Sauvegarde reussie");
